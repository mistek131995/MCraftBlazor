@page "/register"
@using MCraftBlazor.Components.Common
@using MCraftBlazor.Components.Register


@if(registerSuccess){

    <SuccessMessage Message="@message" />

} else {

    <RegisterForm RegisterSuccess="(bool isRegisterSuccess) => registerSuccess = isRegisterSuccess"/>

}


@code {
    private bool registerSuccess = false;
    private string message = "Регистрация прошла успешно. Сообщение с подтверждением отправлено вам на почту.";
}
